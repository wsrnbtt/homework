#include <stdio.h>
#include <string.h>

void explode(char str1[], char splitter, char str2[][10], int *count);

int main()
{
    char out1[20][10];
    int num1 = 0;

    explode("I/Love/You", '/', out1, &num1);

    printf("Input: \"I/Love/You\", Splitter: '/'\n");
    printf("Count = %d\n", num1);

    for (int i = 0; i < num1; i++)
    {
        printf("Word %d: \"%s\"\n", i + 1, out1[i]);
    }

    return 0;
}

void explode(char str1[], char splitter, char str2[][10], int *count)
{
    int len = strlen(str1);
    int row_count = 0;
    int col_count = 0;
    int i;

    for (i = 0; i <= len; i++)
    {
        if (str1[i] == splitter || str1[i] == '\0')
        {
            str2[row_count][col_count] = '\0';
            
            row_count++;
            col_count = 0;
            
            if (row_count >= 20) break;
        }
        else
        {
            str2[row_count][col_count] = str1[i];
            col_count++;
            
            if (col_count >= 9)
            {
                str2[row_count][9] = '\0';
                row_count++;
                col_count = 0;
                
                while (i < len && str1[i] != splitter) { i++; }
                i--;
            }
        }
    }

    *count = row_count;
}
