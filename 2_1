#include <stdio.h>
#include <string.h>

char *reverse(char *destination, const char source[])
{
    int length = strlen(source);
    int i;

    for (i = 0; i < length; i++)
    {
        destination[i] = source[length - 1 - i];
    }

    destination[length] = '\0';

    return destination;
}

int main()
{
    char input_string1[50] = "I Love You";
    char result_buffer1[50];
    
    reverse(result_buffer1, input_string1);

    printf("Source: \"%s\"\n", input_string1);
    printf("Reversed: \"%s\"\n\n", result_buffer1);

    char input_string2[50] = "Hello World";
    char result_buffer2[50];
    
    reverse(result_buffer2, input_string2);

    printf("Source: \"%s\"\n", input_string2);
    printf("Reversed: \"%s\"\n", result_buffer2);

    return 0;
}
