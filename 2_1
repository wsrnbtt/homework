#include <stdio.h>
#include <string.h>

void reverse(char s1[], char s2[])
{
    int s_len = strlen(s1);
    int i, j;

    for (i = s_len - 1, j = 0; i >= 0; i--, j++)
    {
        s2[j] = s1[i];
    }

    s2[s_len] = '\0';
}

int main()
{
    // --- ทดสอบรอบที่ 1 ---
    char test1_input[50] = "I Love You"; 
    char test1_output[50];

    reverse(test1_input, test1_output);

    printf("Input: \"%s\"\n", test1_input);
    printf("Output: \"%s\"\n\n", test1_output); 

    // --- ทดสอบรอบที่ 2 ---
    char test2_input[50] = "Hello World";
    char test2_output[50];

    reverse(test2_input, test2_output);
    
    printf("Input: \"%s\"\n", test2_input);
    printf("Output: \"%s\"\n", test2_output); 

    return 0; 
}
