#include <stdio.h>
#include <string.h>

char *reverse(char *dest, const char str1[])
{
    int src_len = strlen(str1);
    int i;
    
    if (src_len >= 50) 
    {
        return NULL;
    }

    for (i = 0; i < src_len; i++) 
    {
        // str1[ความยาว - 1 - i]
        dest[i] = str1[src_len - 1 - i]; 
    }

    dest[src_len] = '\0';

    return dest;
}

int main()
{
    char input_1[50] = "I Love You";
    char result_1[50];
    char *output_ptr_1 = reverse(result_1, input_1);

    printf("Input: \"%s\"\n", input_1);
    
    if (output_ptr_1)
    {
        printf("Output: \"%s\"\n\n", output_ptr_1);
    }
    else
    {
        printf("Error: Input string too long (Limit 49 chars).\n\n");
    }

    char input_2[50] = "Hello World";
    char result_2[50];
    char *output_ptr_2 = reverse(result_2, input_2);

    printf("Input: \"%s\"\n", input_2);
    
    if (output_ptr_2)
    {
        printf("Output: \"%s\"\n", output_ptr_2);
    }
    else
    {
        printf("Error: Input string too long (Limit 49 chars).\n");
    }

    return 0;
}
